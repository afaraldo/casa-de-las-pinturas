tbody
  - total = 0
  - compras.each_with_index do |c, i|
    - total += c.importe_pendiente
    tr
      td = c.numero
      td = localize(c.fecha.to_date)
      td = localize(c.fecha_vencimiento.to_date) if c.fecha_vencimiento
      td.text-right = number_to_currency(c.importe_pendiente)
      td
        = hidden_field "pago[boletas_detalles_attributes][#{i}]", :boleta_id, value: c.id
        = text_field "pago[boletas_detalles_attributes][#{i}]", :monto_utilizado, value: number_with_precision(c.importe_pendiente), class: 'form-control mascaraMoneda monto-a-sumar'
      td
        input type="checkbox" name="pago[boletas_detalles_attributes][#{i}][pagado]" class="pagar-boleta"
tfoot
  tr
    td colspan="2"
    td.text-right.text-bold
      | Total:
    td.text-right.text-bold
      = number_to_currency(total)
    td.table-total.text-right.text-bold
      span 0
    td
