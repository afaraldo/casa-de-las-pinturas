= simple_form_for persona, url: !persona.new_record? ? user_path(persona.user) : users_path,
                              html: {id: 'user-form'},
                              remote: true do |f|
  .modal-header
    button.close type="button" data-dismiss="modal"
      span &times;
    = persona.new_record? ? 'Nuevo Usuario' : 'Editar Usuario'
  .modal-body
    = f.input :nombre,    input_html: {data: {'rule-maxlength' => 40, 'rule-minlength' => 2}}
    = f.simple_fields_for @user do |p|
      = p.input :name
      = p.input :password
      = p.input :password_confirmation, label: 'Repetir contraseÃ±a'
    = f.input :direccion, input_html: {data: {'rule-maxlength' => 200}}
    = f.input :telefono,  input_html: {data: {'rule-maxlength' => 20}}
    = f.input :ruc, label: 'Nro. de documento', input_html: {data: {'rule-maxlength' => 30}}
  .modal-footer.text-right
    button.btn.btn-default.pull-left [type="button" data-dismiss="modal" aria-hidden="true"] Cancelar
    input.btn.btn-primary type="submit" value="Guardar" data-disable-with="Guardando..."
