= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
	.login-box
	  .login-logo
	  .login-box-body
	  	h3.text-center Ingresar al Sistema
	  	br
	  	.form-groups.has-feedback
	  		= f.text_field :username, required: false, placeholder: "Nombre de Usuario", class: "form-control", autofocus: true
	  		span.glyphicon.glyphicon-user.form-control-feedback
	  		br
	  	.form-groups.has-feedback
	  		= f.password_field :password, required: false, placeholder: "Contrase√±a", class: "form-control"
	  		span.glyphicon.glyphicon-lock.form-control-feedback
	  		br
	  		.row
	  			.col-xs-8
	  				= f.input :remember_me, label: 'Recordarme', as: :boolean if devise_mapping.rememberable?
	  			.col-xs-4
	  				.form-actions
	  					br
	  					br
	  					= f.button :submit, "Ingresar"
