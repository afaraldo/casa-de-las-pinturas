= simple_form_for movimiento, html: { id: 'movimiento-mercaderia-form', class: 'form-horizontal' }, wrapper: :horizontal_form do |f|
  = f.error_notification
  .row
    .col-xs-6
      = f.input :fecha, as: :string, input_html: { class: 'datepicker' }
      = f.input :motivo
      = f.input :tipo, as: :radio_buttons, wrapper: :horizontal_radio_and_checkboxes
  .links.text-right
    = link_to_add_association '<i class="fa fa-plus"></i> Agregar mercaderia'.html_safe, f, :detalles, class: 'btn btn-default',
                                'data-association-insertion-node' => '#movimiento-detalles-body',
                                'data-association-insertion-method' => 'append'
  table.table.table-bordered
    thead
      tr
