table.table.table-bordered
  thead
    tr
      th Fecha
      th Motivo
      th Tipo
      th
  tbody
    - @movimientos.each do |movimiento|
      tr
        td = localize(movimiento.fecha.to_date)
        td = movimiento.motivo
        td = movimiento.tipo
        td.text-right
          = link_to '<i class="fa fa-edit"></i>'.html_safe, edit_movimiento_mercaderia_path(movimiento), remote: true, class: 'btn btn-default btn-sm'
          | #{' '}
          = link_to ' <i class="fa fa-trash"></i>'.html_safe, movimiento_mercaderia_path(movimiento), method: 'delete', data: {confirm: "Â¿Desea eliminar el movimiento?"}, remote: true, class: 'btn btn-danger btn-sm'